extends layout

block content
    p Welcome Balanjani Chowdary 
    button(onclick="goFaster()", class="btn-secondary") Press Me
    
    div#faster Increase the speed
    div(id="output") MPH #{mph} with change #{change}
    script.
      var mph = 20;
      var change = 1;

      function goFaster() {
        mph += change;
        change++;
        var outputDiv = document.getElementById("output");
        outputDiv.textContent = `MPH ${mph} with change ${change}`;
      }
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL", crossorigin="anonymous")
